= form_for @song do |f|
  = f.error_messages
  %fieldset
    %legend
      Information
    %p
      = f.label :name
      %br
      = f.text_field :name, :value => @song.new_record? ? '' : @song.name
    %p
      = f.label :description
      %br
      = f.text_area :description, :value => @song.new_record? ? '' : @song.description
    %p
      = f.label :genre
      %br
      = f.select :genre, Song::GENRES, :prompt => "Select a genre"
  %p
    = f.submit
    or
    %a.cancel_link{ :href => songs_path } Cancel

