#p_song_container
  %li
    %span#p_songname
      = link_to("#{song.name}", song_path(song))
    %br
    #p_songinfo_container
      %span#p_songinfo
        = "Genre: #{song.genre}"
      %br
      %span#p_songinfo
        = "Description: #{song.description}"
      %br
      = link_to 'Remove this song from the playlist', remove_song_from_playlist_path(@playlist, song), :method => 'remove_song_from_playlist'
      %br
      = link_to 'Move song up playlist', move_song_up_playlist_path(@playlist, song), :method => 'move_song_up_playlist'
      %br
      = link_to 'Move song down playlist', move_song_down_playlist_path(@playlist, song), :method => 'move_song_down_playlist'