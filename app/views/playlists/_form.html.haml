= form_for @playlist do |f|
  = f.error_messages
  %fieldset
    %legend
      Information
    %p
      = f.label :playlist_title
      %br
      = f.text_field :playlist_title, :value => @playlist.new_record? ? '' : @playlist.playlist_title
    %p
      = f.label :playlist_description
      %br
      = f.text_area :playlist_description, :rows => 6, :value => @playlist.new_record? ? '' : @playlist.playlist_description
  %p
    = f.submit
    or
    %a.cancel_link{ :href => playlists_path } Cancel